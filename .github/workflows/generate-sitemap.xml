name: Generate Sitemap

on:
  push:
    branches:
      - main
  pull_request:
    branches:
      - main

jobs:
  generate_sitemap:
    runs-on: ubuntu-latest

    steps:
      # Checkout the repository
      - name: Checkout repository
        uses: actions/checkout@v2

      # Set up Node.js environment (if you're using a JS tool to generate the sitemap)
      - name: Set up Node.js
        uses: actions/setup-node@v2
        with:
          node-version: '16'

      # Install dependencies (if necessary)
      - name: Install dependencies
        run: |
          npm install

      # Generate the sitemap
      - name: Generate sitemap
        run: |
          # Assuming you're using a sitemap generator tool like 'sitemap.js'
          npx sitemap-generator-cli https://hashtek.com --output ./public/sitemap.xml

      # Commit and push the generated sitemap
      - name: Commit sitemap file
        run: |
          git config --global user.name "GitHub Actions"
          git config --global user.email "actions@github.com"
          git add ./public/sitemap.xml
          git commit -m "Add/update sitemap"
          git push origin main

      # Optionally deploy (if using GitHub Pages, for example)
      - name: Deploy to GitHub Pages
        uses: peaceiris/actions-gh-pages@v3
        with:
          personal_token: ${{ secrets.GITHUB_TOKEN }}
          publish_dir: ./public
